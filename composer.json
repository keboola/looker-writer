{
    "require": {
        "php": "^7.1",
        "keboola/db-adapter-snowflake": "dev-tf-from-php-db-import",
        "keboola/looker-api": "^6.2.10",
        "keboola/php-component": "dev-tf-fix-sync-action-logging",
        "keboola/storage-api-client": "^10.9",
        "keboola/syrup-php-client": "^5.2"
    },
    "require-dev": {
        "jakub-onderka/php-parallel-lint": "^1.0",
        "keboola/coding-standard": ">=7.0.2",
        "keboola/php-temp": "^1.0",
        "phpstan/phpstan-shim": "^0.10.6",
        "phpunit/phpunit": "^7.0",
        "symfony/process": "^4.0",
        "keboola/datadir-tests": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Keboola\\LookerWriter\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Keboola\\LookerWriter\\Tests\\": "tests/phpunit/",
            "Keboola\\LookerWriter\\FunctionalTests\\": "tests/functional/"
        }
    },
    "scripts": {
        "tests-phpunit": "phpunit",
        "tests-datadir": "phpunit tests/functional",
        "tests": [
            "@tests-phpunit",
            "@tests-datadir"
        ],

        "phpstan": "phpstan analyse ./src ./tests --level=max --no-progress -c phpstan.neon",
        "phpcs": "phpcs -n --ignore=vendor --extensions=php .",
        "phpcbf": "phpcbf -n --ignore=vendor --extensions=php .",
        "phplint": "parallel-lint -j 10 --exclude vendor .",
        "build": [
            "@phplint",
            "@phpcs",
            "@phpstan",
            "@tests"
        ],
        "ci": [
            "@composer validate --no-check-publish --no-check-all",
            "@build"
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/keboola/looker-api.git"
        },
        {
            "type": "git",
            "url": "https://github.com/keboola/db-adapter-snowflake.git"
        }
    ]
}
